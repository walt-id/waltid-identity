{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Issuer Schema",
  "type": "object",
  "properties": {
    "issuer": {
      "type": "object",
      "properties": {
        "type": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "contains": {
            "const": "Profile"
          }
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["type", "name", "url"]
    }
  },
  "required": ["issuer"]
}
